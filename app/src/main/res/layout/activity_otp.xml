<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".auth.OtpActivity">

    <TextView
        android:id="@+id/verifyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        tools:text="Verify +919870134127"/>

    <TextView
        android:id="@+id/waitingTv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:text="Waiting to automatically detect an SMS send to"/>

    <TextView
        android:id="@+id/counterTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/codeEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="------"
        android:inputType="phone"
        android:letterSpacing="0.8"
        android:maxLength="6"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textAlignment="center"
        tools:ignore="TouchTargetSizeCheck" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter 6 digit code"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifcationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textAlignment="center"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        app:cornerRadius="5dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="VERIFY"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/resendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESEND SMS"
        android:textAlignment="center"
        android:padding="15dp"
        app:cornerRadius="5dp"
        android:textSize="18sp"
        android:enabled="false"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>
</LinearLayout>